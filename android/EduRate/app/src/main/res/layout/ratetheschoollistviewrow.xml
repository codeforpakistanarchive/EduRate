<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginRight="15dp"
    android:layout_marginLeft="15dp"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="School Building"
        android:id="@+id/txtfacilityname"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:textStyle="bold" />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ratingBar"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        style="?android:attr/ratingBarStyleIndicator"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Available"
        android:id="@+id/txtavailable"
        android:layout_below="@+id/txtfacilityname"
        android:layout_marginLeft="15dp"
        android:textSize="16sp"
        android:layout_marginTop="5dp" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/txtavailable"
        android:checked="false"
        android:id="@+id/checkboxavailable"
        android:layout_below="@+id/txtfacilityname"
        android:layout_toRightOf="@+id/txtavailable" />

    <EditText
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:id="@+id/edittextreview"
        android:layout_below="@+id/txtavailable"
        android:layout_alignLeft="@+id/txtfacilityname"
        android:layout_alignStart="@+id/txtfacilityname"
        android:layout_marginTop="10dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:layout_alignTop="@+id/edittextreview"
        android:layout_toRightOf="@+id/edittextreview"
        android:layout_toEndOf="@+id/edittextreview" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView3"
        android:layout_below="@+id/imageView2"
        android:layout_toRightOf="@+id/edittextreview"
        android:layout_toEndOf="@+id/edittextreview"
        android:src="@drawable/camera"
        android:layout_alignBottom="@+id/edittextreview"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />



</RelativeLayout>